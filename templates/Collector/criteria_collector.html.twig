{% block toolbar %}
    {% if collector.criteria|length > 0 %}
        {% set icon %}
            {{ source('@GarakOrmCriteria/Collector/database-search.svg') }}
            <span class="sf-toolbar-value">{{ collector.criteria|length }}</span>
        {% endset %}

        {% set text %}
            <div class="sf-toolbar-info-piece">
                <b>Criteria</b>
                <span class="sf-toolbar-status sf-toolbar-status-grey">{{ collector.criteria|length }}</span>
            </div>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', {link: true}) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label{{ collector.criteria|length == 0 ? ' disabled' }}">
        <span class="icon">
            {{ source('@GarakOrmCriteria/Collector/database-search.svg') }}
        </span>
        <strong>ORM Criteria</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>ORM Criteria</h2>
    {% if collector.criteria %}
        <p class="help">Applied criteria</p>
        <table>
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Criterion</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                {% for name, criterion in collector.criteria %}
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ dump(criterion.0) }}</td>
                        <td>{{ dump(criterion.1) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="empty empty-panel">
            <p>No criteria were collected.</p>
        </div>
    {% endif %}
{% endblock %}
