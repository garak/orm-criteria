{
    "name": "garak/orm-criteria",
    "type": "library",
    "description": "Apply filters to Doctrine Query Builder",
    "keywords": ["Doctrine", "filter"],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "garakkio@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/orm": "^2.7 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Garak\\OrmCriteria\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Garak\\OrmCriteria\\Tests\\": "tests"
        }
    }
}
